{
    "extends": [
        "tslint-config-standard"
    ],
    "env": {
        "node": true
    },
    "parser": "babel-eslint",
    "parserOptions": {
        "sourceType": "module"
    },
    "rules": {
        "no-constant-condition": true,
        "max-line-length": [
            240
        ],
        "align": [
            true,
            "parameters",
            "statements"
        ],
        "jsdoc-format": true,
        "semicolon": [
            true,
            "never"
        ],
        "typedef-whitespace": [
            true,
            {
                "property-declaration": "nospace",
                "variable-declaration": "nospace"
            }
        ]
    }
}